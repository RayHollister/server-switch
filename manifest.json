{
  "name": "ServerSwitch",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Switch between different server environments for multiple websites.",
  "icons": {
    "16": "images/toggle-on-solid_16.png",
    "48": "images/toggle-on-solid_48.png",
    "128": "images/toggle-on-solid_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/toggle-on-solid_16.png"
  },
  "permissions": ["tabs", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
